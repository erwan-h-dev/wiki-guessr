<turbo-frame id="wiki-content">
    <div class="wiki-page">
        <h1 class="wiki-title">{{ title|replace({'_': ' '}) }}</h1>
        <div class="wiki-content">
            {{ content|raw }}
        </div>
    </div>
</turbo-frame>

<style>
.wiki-content {
    font-family: 'Linux Libertine', 'Georgia', 'Times', serif;
}

.wiki-title {
    font-size: 2rem;
    color: #202122;
    margin-bottom: 1.5rem;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid #E5E7EB;
}

.wiki-body {
    line-height: 1.6;
    color: #202122;
    font-size: 1rem;
}

.wiki-body a {
    color: #0645AD;
    text-decoration: none;
}

.wiki-body a:visited {
    color: #0B0080;
}

.wiki-body a:hover {
    text-decoration: underline;
}

.wiki-body p {
    margin-bottom: 1rem;
}

.wiki-body h2,
.wiki-body h3,
.wiki-body h4 {
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
    color: #111827;
}

.wiki-body ul,
.wiki-body ol {
    margin-left: 2rem;
    margin-bottom: 1rem;
}

.wiki-body li {
    margin-bottom: 0.25rem;
}

.wiki-body img {
    max-width: 100%;
    height: auto;
}

.wiki-body table {
    border-collapse: collapse;
    margin-bottom: 1rem;
}

.wiki-body td,
.wiki-body th {
    border: 1px solid #E5E7EB;
    padding: 0.5rem;
}
</style>

{% extends "base.html.twig" %}

{% block title %}Room Multijoueur - Wiki Game{% endblock %}

{% block page_stylesheets %}
    {{ encore_entry_link_tags('landing') }}
{% endblock %}

{% block page_scripts %}
{#    {{ encore_entry_script_tags('multiplayer') }}#}
{% endblock %}
{% block body %}

<div class="landing-container">
    <header class="header">
        <a href="{{ path('multiplayer_lobby') }}" class="back-link">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <line x1="19" y1="12" x2="5" y2="12"/>
                <polyline points="12 19 5 12 12 5"/>
            </svg>
            Lobby
        </a>
        <h1 class="main-title">Room Multijoueur</h1>
        {% if not game.isPublic %}
            <p class="subtitle">Code: <strong>{{ game.code }}</strong></p>
        {% endif %}
    </header>

    <main class="game-modes" style="display: grid; grid-template-columns: 1fr 1fr; gap: 2rem; max-width: 1200px;">
        <!-- Left: Participants -->
        <section style="display: flex; flex-direction: column;">
            <h2 style="font-size: 20px; font-weight: 600; margin-bottom: 1rem;">üë• Participants ({{ game.participants|length }}/{{ game.maxPlayers }})</h2>

            <div style="display: flex; flex-direction: column; gap: 0.75rem; flex: 1;">
                {% for participant in game.participants %}
                    <div data-participant-id="{{ participant.id }}" style="display: flex; justify-content: space-between; align-items: center; padding: 1rem; background: var(--white); border: 1px solid var(--gray-200); border-radius: var(--radius-sm);">
                        <div style="flex: 1;">
                            <div style="display: flex; align-items: center; gap: 0.5rem;">
                                <span data-username style="font-weight: 600;">{{ participant.player.username }}</span>
                                {% if player == participant.player %}
                                <button type="button" onclick="showUsernameModal()" style="background: none; border: none; cursor: pointer; padding: 0.25rem; display: flex; align-items: center; color: var(--gray-600); transition: color 0.2s ease;" title="Modifier le pseudo">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                        <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"/>
                                        <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"/>
                                    </svg>
                                </button>
                                {% elseif player == game.creator and participant.player != game.creator %}
                                <button type="button" onclick="kickPlayer({{ participant.id }}, '{{ participant.player.username }}')" style="background: none; border: none; cursor: pointer; padding: 0.25rem; display: flex; align-items: center; color: var(--gray-600); transition: color 0.2s ease;" title="Retirer ce joueur">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                        <polyline points="3 6 5 6 21 6"/>
                                        <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"/>
                                        <line x1="10" y1="11" x2="10" y2="17"/>
                                        <line x1="14" y1="11" x2="14" y2="17"/>
                                    </svg>
                                </button>
                                {% endif %}
                            </div>
                            <div data-status style="font-size: 12px; color: var(--gray-600);">
                                {% if participant.isReady %}
                                    ‚úì Pr√™t
                                {% else %}
                                    ‚è≥ En attente
                                {% endif %}
                            </div>
                        </div>
                        {% if player == participant.player %}
                        <span style="font-size: 12px; background: var(--primary); color: white; padding: 0.25rem 0.75rem; border-radius: 20px;">
                            {% if player == participant.player %}Vous{% endif %}
                            {% if participant.player == game.creator %} üëë{% endif %}
                        </span>
                        {% elseif participant.player == game.creator %}
                        <span>üëë</span>
                        {% endif %}
                    </div>
                {% endfor %}
            </div>

            {% if not game.isPublic %}
                <div style="margin-top: 1.5rem; padding: 1rem; background: var(--gray-100); border-radius: var(--radius-sm); text-align: center;">
                    <div style="font-size: 12px; color: var(--gray-600); margin-bottom: 0.5rem;">Partagez ce code:</div>
                    <div style="font-size: 24px; font-weight: 700; letter-spacing: 0.2em; color: var(--primary);">{{ game.code }}</div>
                </div>
            {% endif %}
        </section>

        <!-- Right: Challenge Selection & Controls -->
        <section style="display: flex; flex-direction: column; gap: 1.5rem;">
            <div style="padding: 1.5rem; background: var(--white); border: 2px solid var(--gray-200); border-radius: var(--radius-md);">
                <h3 style="font-size: 16px; font-weight: 600; margin-bottom: 1rem;">üéØ Challenge</h3>

                {% if player == game.creator %}
                    <details style="margin-top: 1rem;">
                        <summary style="cursor: pointer; font-weight: 600; padding: 0.5rem; background: var(--gray-100); border-radius: var(--radius-sm);">üìã S√©lectionner un challenge</summary>

                        <!-- Predefined challenges -->
                        <form method="post" action="{{ path('multiplayer_select_challenge', {id: game.id}) }}" style="margin-top: 1rem;">
                            <label style="display: block; font-size: 14px; font-weight: 500; margin-bottom: 0.5rem; color: var(--gray-700);">Challenge pr√©d√©fini</label>
                            <select name="challengeId" style="width: 100%; padding: 0.75rem; border: 1px solid var(--gray-300); border-radius: var(--radius-sm); margin-bottom: 1rem;">
                                <option value="">-- Choisir un challenge --</option>
                                {% for challenge in challenges %}
                                    <option value="{{ challenge.id }}">{{ challenge.startPage }} ‚Üí {{ challenge.endPage }}</option>
                                {% endfor %}
                            </select>
                            <button type="submit" style="width: 100%; padding: 0.75rem; background: var(--primary); color: white; border: none; border-radius: var(--radius-sm); font-weight: 600; cursor: pointer;">
                                S√©lectionner
                            </button>
                        </form>

                        <div style="text-align: center; margin: 1rem 0; color: var(--gray-500); font-size: 14px;">ou</div>

                        <!-- Custom challenge -->
                        <form method="post" action="{{ path('multiplayer_select_challenge', {id: game.id}) }}" style="margin-bottom: 1rem;">
                            <label style="display: block; font-size: 14px; font-weight: 500; margin-bottom: 0.5rem; color: var(--gray-700);">Challenge personnalis√©</label>

                            <div style="margin-bottom: 1rem;" data-controller="wiki-autocomplete" data-wiki-autocomplete-url-value="{{ path('api_search_wikipedia') }}">
                                <label style="display: block; font-size: 13px; margin-bottom: 0.25rem; color: var(--gray-600);">Page de d√©part</label>
                                <div style="position: relative;">
                                    <input
                                        type="text"
                                        name="customStartPage"
                                        placeholder="Ex: France"
                                        style="width: 100%; padding: 0.75rem; border: 1px solid var(--gray-300); border-radius: var(--radius-sm);"
                                        data-wiki-autocomplete-target="input"
                                        data-action="input->wiki-autocomplete#search keydown->wiki-autocomplete#navigate blur->wiki-autocomplete#blur"
                                        autocomplete="off"
                                    >
                                    <div
                                        data-wiki-autocomplete-target="results"
                                        style="display: none; position: absolute; top: 100%; left: 0; right: 0; background: white; border: 1px solid var(--gray-300); border-top: none; border-radius: 0 0 var(--radius-sm) var(--radius-sm); max-height: 200px; overflow-y: auto; z-index: 1000; box-shadow: 0 4px 6px rgba(0,0,0,0.1);"
                                    ></div>
                                </div>
                            </div>

                            <div style="margin-bottom: 1rem;" data-controller="wiki-autocomplete" data-wiki-autocomplete-url-value="{{ path('api_search_wikipedia') }}">
                                <label style="display: block; font-size: 13px; margin-bottom: 0.25rem; color: var(--gray-600);">Page d'arriv√©e</label>
                                <div style="position: relative;">
                                    <input
                                        type="text"
                                        name="customEndPage"
                                        placeholder="Ex: Philosophie"
                                        style="width: 100%; padding: 0.75rem; border: 1px solid var(--gray-300); border-radius: var(--radius-sm);"
                                        data-wiki-autocomplete-target="input"
                                        data-action="input->wiki-autocomplete#search keydown->wiki-autocomplete#navigate blur->wiki-autocomplete#blur"
                                        autocomplete="off"
                                    >
                                    <div
                                        data-wiki-autocomplete-target="results"
                                        style="display: none; position: absolute; top: 100%; left: 0; right: 0; background: white; border: 1px solid var(--gray-300); border-top: none; border-radius: 0 0 var(--radius-sm) var(--radius-sm); max-height: 200px; overflow-y: auto; z-index: 1000; box-shadow: 0 4px 6px rgba(0,0,0,0.1);"
                                    ></div>
                                </div>
                            </div>

                            <button type="submit" style="width: 100%; padding: 0.75rem; background: var(--accent); color: white; border: none; border-radius: var(--radius-sm); font-weight: 600; cursor: pointer;">
                                Cr√©er le challenge
                            </button>
                        </form>
                    </details>
                {% endif %}

                {% if game.hasCustomChallenge() or game.challenge %}
                    <div style="padding: 1rem; background: var(--gray-50); border-radius: var(--radius-sm); display: flex; gap: 10px; align-items: center;">
                        <div style="font-weight: 600; color: var(--primary);">{{ game.startPage }}</div>
                        <div style="font-size: 12px; color: var(--gray-600); margin: 0.5rem 0;">‚ûú</div>
                        <div style="font-weight: 600; color: var(--success);">{{ game.endPage }}</div>
                    </div>
                    {% if game.hasCustomChallenge() %}
                        <div style="font-size: 12px; color: var(--gray-600); margin-top: 0.5rem; text-align: center;">
                            ‚≠ê Challenge personnalis√©
                        </div>
                    {% endif %}
                {% else %}
                    <div style="padding: 1rem; background: var(--gray-100); border-radius: var(--radius-sm); color: var(--gray-600); text-align: center; margin-bottom: 1rem;">
                        En attente de s√©lection du cr√©ateur...
                    </div>
                {% endif %}

            </div>

            <!-- Ready Button -->
            <div style="display: flex; gap: 1rem;">
                <button id="readyBtn" type="button" onclick="toggleReady()" style="flex: 1; padding: 1rem; background: linear-gradient(135deg, var(--success) 0%, #059669 100%); color: white; border: none; border-radius: var(--radius-md); font-weight: 600; cursor: pointer; font-size: 16px; transition: all 0.3s ease;">
                    ‚úì Je suis pr√™t
                </button>

                <form method="post" action="{{ path('multiplayer_leave', {id: game.id}) }}" style="flex: 1;">
                    <button type="submit" style="width: 100%; padding: 1rem; background: var(--gray-200); color: var(--gray-900); border: none; border-radius: var(--radius-md); font-weight: 600; cursor: pointer; font-size: 16px;">
                        ‚úï Quitter
                    </button>
                </form>
            </div>

            <!-- Start Button (Creator only) -->
            {% if player == game.creator %}
                <button id="startBtn" type="button" onclick="startCountdown()" disabled style="width: 100%; padding: 1.5rem; background: linear-gradient(135deg, var(--accent) 0%, #f97316 100%); color: white; border: none; border-radius: var(--radius-md); font-weight: 600; cursor: pointer; font-size: 18px; opacity: 0.5; cursor: not-allowed;" title="Tous les joueurs doivent √™tre pr√™ts">
                    üöÄ D√©marrer la partie
                </button>
            {% endif %}

            <!-- Status Info -->
            <div style="padding: 1rem; background: var(--gray-50); border-radius: var(--radius-sm); font-size: 13px; color: var(--gray-600);">
                <div style="margin-bottom: 0.5rem;"><strong>√âtat de la room:</strong> {{ game.state.label() }}</div>
                {% if player == game.creator and game.challenge %}
                    <div style="color: var(--primary); font-weight: 600;">
                        Tous les joueurs doivent √™tre pr√™ts pour d√©marrer
                    </div>
                {% endif %}
            </div>
        </section>
    </main>
</div>

<!-- Countdown Overlay -->
<div id="countdownOverlay" style="display: none; position: fixed; top: 0; left: 0; right: 0; bottom: 0; background: rgba(0,0,0,0.9); z-index: 9999; flex-direction: column; justify-content: center; align-items: center;">
    <div style="text-align: center; color: white;">
        <div style="font-size: 120px; font-weight: 700; margin: 0;" id="countdownText">5</div>
        <div style="font-size: 24px; margin-top: 1rem;">Pr√©parez-vous !</div>
    </div>
</div>

<!-- Kicked Modal -->
<div id="kickedModal" style="display: none; position: fixed; top: 0; left: 0; right: 0; bottom: 0; background: rgba(0,0,0,0.7); z-index: 10000; flex-direction: column; justify-content: center; align-items: center;">
    <div style="background: white; padding: 2rem; border-radius: 12px; text-align: center; max-width: 400px; box-shadow: 0 10px 40px rgba(0,0,0,0.3);">
        <div style="font-size: 48px; margin-bottom: 1rem;">‚ö†Ô∏è</div>
        <h2 style="margin: 0 0 1rem 0; font-size: 24px; color: #1a1a1a;">Vous avez √©t√© retir√©</h2>
        <p style="margin: 0 0 1.5rem 0; color: #666; font-size: 16px;">Le cr√©ateur vous a retir√© de la room.</p>
        <button onclick="window.location.href='{{ path('multiplayer_lobby') }}'" style="width: 100%; padding: 0.75rem; background: linear-gradient(135deg, var(--primary) 0%, #0891b2 100%); color: white; border: none; border-radius: 8px; font-weight: 600; cursor: pointer; font-size: 16px;">
            Retour au lobby
        </button>
    </div>
</div>

<!-- Auto-refresh for polling -->
<script>
let pollInterval;
let countdownInterval;
let gameStartedAt = null;
let currentGameState = null;
let currentPlayerReady = false;
let currentPlayerId = {{ player.id }};
let isCurrentPlayerCreator = {{ player == game.creator ? 'true' : 'false' }};

function pollRoomState() {
    fetch('{{ path('multiplayer_sync', {id: game.id}) }}')
        .then(res => res.json())
        .then(data => {
            // Store game state for later reference
            currentGameState = data;

            // Find current player status by ID
            const currentPlayerData = data.participants.find(p => p.playerId === currentPlayerId);

            // Check if current player has been kicked
            if (!currentPlayerData) {
                // Player has been kicked
                clearInterval(pollInterval);
                clearInterval(countdownInterval);
                document.getElementById('kickedModal').style.display = 'flex';
                return;
            }

            if (currentPlayerData) {
                currentPlayerReady = currentPlayerData.isReady;
                updateReadyButtonUI();
            }

            // Update participant UI
            updateParticipantsList(data.participants);

            // Handle state transitions
            if (data.state === 'countdown' && !gameStartedAt) {
                showCountdown(data.countdownEndsAt);
            } else if (data.state === 'in_progress') {
                // Game started, redirect to game
                gameStartedAt = data.gameStartedAt;
                redirectToGame();
            }
        })
        .catch(err => console.error('Poll error:', err));
}

function updateParticipantsList(participants) {
    const allParticipantIds = [...participants.map(p => p.id)];
    participants.forEach((participant, index) => {

        const el = document.querySelector(`[data-participant-id="${participant.id}"]`);

        if (el) {
            el.querySelector('[data-status]').textContent = participant.isReady ? '‚úì Pr√™t' : '‚è≥ En attente';
            el.querySelector('[data-username]').textContent  = participant.userName;
        } else {
            console.log('New participant joined: ', participant.userName);
            // If participant not found in DOM, it means a new participant joined
            const participantsContainer = document.querySelector('[data-participant-id]').parentNode;

            // Determine which buttons to show
            let buttonHTML = '';
            if (participant.playerId === currentPlayerId) {
                // Show pencil icon for current player
                buttonHTML = `
                    <button type="button" onclick="showUsernameModal()" style="background: none; border: none; cursor: pointer; padding: 0.25rem; display: flex; align-items: center; color: var(--gray-600); transition: color 0.2s ease;" title="Modifier le pseudo">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"/>
                            <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"/>
                        </svg>
                    </button>
                `;
            } else if (isCurrentPlayerCreator) {
                // Show trash icon if current user is creator and this is not the creator
                buttonHTML = `
                    <button type="button" onclick="kickPlayer(${participant.id}, '${participant.userName}')" style="background: none; border: none; cursor: pointer; padding: 0.25rem; display: flex; align-items: center; color: var(--gray-600); transition: color 0.2s ease;" title="Retirer ce joueur">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <polyline points="3 6 5 6 21 6"/>
                            <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"/>
                            <line x1="10" y1="11" x2="10" y2="17"/>
                            <line x1="14" y1="11" x2="14" y2="17"/>
                        </svg>
                    </button>
                `;
            }

            let newParticipant = `
                <div data-participant-id="${participant.id}" style="display: flex; justify-content: space-between; align-items: center; padding: 1rem; background: var(--white); border: 1px solid var(--gray-200); border-radius: var(--radius-sm);">
                    <div style="flex: 1;">
                        <div style="display: flex; align-items: center; gap: 0.5rem;">
                            <span data-username style="font-weight: 600;">
                                ${participant.userName}
                            </span>
                            ${buttonHTML}
                        </div>
                        <div data-status style="font-size: 12px; color: var(--gray-600);">${participant.isReady ? '‚úì Pr√™t' : '‚è≥ En attente'}</div>
                    </div>
                </div>
            `;

            participantsContainer.insertAdjacentHTML('beforeend', newParticipant);
        }
    });

    document.querySelectorAll(`[data-participant-id]`).forEach(el => {
        // Remove participants that are no longer in the list
        let pid = parseInt(el.getAttribute('data-participant-id'));
        if (!allParticipantIds.includes(pid)) {
            console.log('Participant left: ', el.getAttribute('data-participant-id'));
            el.remove();
        }
    });

    // Update start button state
    updateStartButtonState();
}

function updateStartButtonState() {
    const startBtn = document.getElementById('startBtn');
    if (!startBtn) return;

    const allReady = checkAllPlayersReady();
    const hasChallengeSelected = currentGameState && currentGameState.challenge !== null;
    const canStart = allReady && hasChallengeSelected;

    if (canStart) {
        startBtn.disabled = false;
        startBtn.style.opacity = '1';
        startBtn.style.cursor = 'pointer';
        startBtn.title = 'D√©marrer la partie';
    } else {
        startBtn.disabled = true;
        startBtn.style.opacity = '0.5';
        startBtn.style.cursor = 'not-allowed';
        if (!hasChallengeSelected) {
            startBtn.title = 'Un challenge doit √™tre s√©lectionn√©';
        } else {
            startBtn.title = 'Tous les joueurs doivent √™tre pr√™ts';
        }
    }
}

function checkAllPlayersReady() {
    const participants = document.querySelectorAll('[data-participant-id]');
    if (participants.length === 0) {
        return false;
    }

    for (const participant of participants) {
        const statusEl = participant.querySelector('[data-status]');
        if (statusEl && !statusEl.textContent.includes('Pr√™t')) {
            return false;
        }
    }

    return true;
}

function updateReadyButtonUI() {
    const readyBtn = document.getElementById('readyBtn');
    if (!readyBtn) return;

    if (currentPlayerReady) {
        readyBtn.style.background = 'linear-gradient(135deg, #ef4444 0%, #dc2626 100%)';
        readyBtn.textContent = '‚úï Je ne suis pas pr√™t';
    } else {
        readyBtn.style.background = 'linear-gradient(135deg, var(--success) 0%, #059669 100%)';
        readyBtn.textContent = '‚úì Je suis pr√™t';
    }
}

function toggleReady() {
    const readyBtn = document.getElementById('readyBtn');

    const newReadyState = !currentPlayerReady;

    fetch('{{ path('multiplayer_ready', {id: game.id}) }}', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/x-www-form-urlencoded',
        },
        body: 'ready=' + (newReadyState ? '1' : '0')
    })
        .then(res => res.json())
        .then(data => {
            if (data.success) {
                currentPlayerReady = newReadyState;
                updateReadyButtonUI();
                // Trigger an immediate poll to update other players' views
                setTimeout(pollRoomState, 500);
            }
        })
        .catch(err => {
            console.error('Error:', err);
            alert('Erreur lors de la mise √† jour du statut');
            readyBtn.disabled = false;
            readyBtn.style.opacity = '1';
        });
}

function showUsernameModal() {
    const currentUsername = document.querySelector('[data-username]').textContent;
    const newUsername = prompt('Changer votre pseudo (2-50 caract√®res):', currentUsername);

    if (newUsername === null) {
        return; // User cancelled
    }

    const trimmedUsername = newUsername.trim();

    if (trimmedUsername.length < 2 || trimmedUsername.length > 50) {
        alert('Le pseudo doit contenir entre 2 et 50 caract√®res');
        return;
    }

    fetch('{{ path('player_update_username') }}', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
        },
        body: JSON.stringify({ username: trimmedUsername })
    })
        .then(res => res.json())
        .then(data => {
            if (data.success) {
                // Update local UI
                document.querySelector('[data-username]').textContent = data.username;
                // Trigger immediate poll to update other players' views
                setTimeout(pollRoomState, 300);
            } else {
                alert('Erreur: ' + (data.error || 'Impossible de changer le pseudo'));
            }
        })
        .catch(err => {
            console.error('Error:', err);
            alert('Erreur lors de la mise √† jour du pseudo');
        });
}

function kickPlayer(participantId) {
    fetch('{{ path('multiplayer_kick', {id: game.id, participantId: 'PARTICIPANT_ID'}) }}'.replace('PARTICIPANT_ID', participantId), {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
        }
    })
        .then(res => res.json())
        .then(data => {
            if (data.success) {
                // Remove the participant from the DOM
                const el = document.querySelector(`[data-participant-id="${participantId}"]`);
                if (el) {
                    el.remove();
                }
                // Trigger poll to update the button state
                setTimeout(pollRoomState, 300);
            } else {
                alert('Erreur: ' + (data.error || 'Impossible de retirer le joueur'));
            }
        })
        .catch(err => {
            console.error('Error:', err);
            alert('Erreur lors du retrait du joueur');
        });
}

function startCountdown() {
    const btn = document.getElementById('startBtn');
    btn.disabled = true;
    btn.textContent = 'D√©marrage...';

    fetch('{{ path('multiplayer_start', {id: game.id}) }}', { method: 'POST' })
        .then(res => res.json())
        .then(data => {
            if (data.success) {
                showCountdown(data.countdownEndsAt);
            } else {
                alert('Erreur: ' + (data.error || 'Cannot start game'));
                btn.disabled = false;
                btn.textContent = 'üöÄ D√©marrer la partie';
            }
        })
        .catch(err => {

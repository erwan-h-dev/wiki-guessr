{% extends "base.html.twig" %}

{% block title %}Room Multijoueur - Wiki Game{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('landing') }}
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('multiplayer') }}
{% endblock %}
{% block body %}

{# Username change modal #}
{% include 'components/username_modal.html.twig' with {
    show_username_modal: false,
    player: player
} only %}

<div class="landing-container"
     data-controller="multiplayer--room"
     data-multiplayer--room-game-id-value="{{ game.id }}"
     data-multiplayer--room-player-id-value="{{ player.id }}"
     data-multiplayer--room-is-creator-value="{{ player == game.creator ? 'true' : 'false' }}"
     data-multiplayer--room-sync-url-value="{{ path('multiplayer_sync', {id: game.id}) }}"
     data-multiplayer--room-ready-url-value="{{ path('multiplayer_ready', {id: game.id}) }}"
     data-multiplayer--room-update-username-url-value="{{ path('player_update_username') }}"
     data-multiplayer--room-kick-url-value="{{ path('multiplayer_kick', {id: game.id, participantId: 'PARTICIPANT_ID'}) }}"
     data-multiplayer--room-start-url-value="{{ path('multiplayer_start', {id: game.id}) }}"
     data-multiplayer--room-do-start-url-value="{{ path('multiplayer_do_start', {id: game.id}) }}"
     data-multiplayer--room-lobby-url-value="{{ path('multiplayer_lobby') }}"
>
    <header class="header">
        <a href="{{ path('multiplayer_lobby') }}" class="back-link">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <line x1="19" y1="12" x2="5" y2="12"/>
                <polyline points="12 19 5 12 12 5"/>
            </svg>
            Lobby
        </a>
        <h1 class="main-title">Room Multijoueur</h1>
        {% if not game.isPublic %}
            <p class="subtitle">Code: <strong>{{ game.code }}</strong></p>
        {% endif %}
    </header>

    <main class="game-modes" style="display: grid; grid-template-columns: 1fr 1fr; gap: 2rem; max-width: 1200px;">
        <!-- Left: Participants -->
        <section style="display: flex; flex-direction: column;">
            <h2 style="font-size: 20px; font-weight: 600; margin-bottom: 1rem;">üë• Participants ({{ game.participants|length }}/{{ game.maxPlayers }})</h2>

            <div style="display: flex; flex-direction: column; gap: 0.75rem; flex: 1;" data-multiplayer--room-target="participantsList">
                {% for participant in game.participants %}
                    <div data-participant-id="{{ participant.id }}" style="display: flex; justify-content: space-between; align-items: center; padding: 1rem; background: var(--white); border: 1px solid var(--gray-200); border-radius: var(--radius-sm);">
                        <div style="flex: 1;">
                            <div style="display: flex; align-items: center; gap: 0.5rem;">
                                <span data-username style="font-weight: 600;">{{ participant.player.username }}</span>
                                {% if player == participant.player %}
                                <button type="button" onclick="const username = this.parentElement.querySelector('[data-username]').textContent.trim(); document.querySelector('[data-controller=username-edit]')?.dispatchEvent(new CustomEvent('show-username-modal', { detail: { username } }))" style="background: none; border: none; cursor: pointer; padding: 0.25rem; display: flex; align-items: center; color: var(--gray-600); transition: color 0.2s ease;" title="Modifier le pseudo">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                        <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"/>
                                        <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"/>
                                    </svg>
                                </button>
                                {% elseif player == game.creator and participant.player != game.creator %}
                                <button type="button" data-action="click->multiplayer--room#kickPlayer" data-participant-id="{{ participant.id }}" data-username="{{ participant.player.username }}" style="background: none; border: none; cursor: pointer; padding: 0.25rem; display: flex; align-items: center; color: var(--gray-600); transition: color 0.2s ease;" title="Retirer ce joueur">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                        <polyline points="3 6 5 6 21 6"/>
                                        <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"/>
                                        <line x1="10" y1="11" x2="10" y2="17"/>
                                        <line x1="14" y1="11" x2="14" y2="17"/>
                                    </svg>
                                </button>
                                {% endif %}
                            </div>
                            <div data-status style="font-size: 12px; color: var(--gray-600);">
                                {% if participant.isReady %}
                                    ‚úì Pr√™t
                                {% else %}
                                    ‚è≥ En attente
                                {% endif %}
                            </div>
                        </div>
                        {% if player == participant.player %}
                        <span style="font-size: 12px; background: var(--primary); color: white; padding: 0.25rem 0.75rem; border-radius: 20px;">
                            {% if player == participant.player %}Vous{% endif %}
                            {% if participant.player == game.creator %} üëë{% endif %}
                        </span>
                        {% elseif participant.player == game.creator %}
                        <span>üëë</span>
                        {% endif %}
                    </div>
                {% endfor %}
            </div>

            {% if not game.isPublic %}
                <div style="margin-top: 1.5rem; padding: 1rem; background: var(--gray-100); border-radius: var(--radius-sm); text-align: center;">
                    <div style="font-size: 12px; color: var(--gray-600); margin-bottom: 0.5rem;">Partagez ce code:</div>
                    <div style="font-size: 24px; font-weight: 700; letter-spacing: 0.2em; color: var(--primary);">{{ game.code }}</div>
                </div>
            {% endif %}
        </section>

        <!-- Right: Challenge Selection & Controls -->
        <section style="display: flex; flex-direction: column; gap: 1.5rem;">
            <div style="padding: 1.5rem; background: var(--white); border: 2px solid var(--gray-200); border-radius: var(--radius-md);">
                <h3 style="font-size: 16px; font-weight: 600; margin-bottom: 1rem;">üéØ Challenge</h3>

                {% if player == game.creator %}
                    <details style="margin-top: 1rem;">
                        <summary style="cursor: pointer; font-weight: 600; padding: 0.5rem; background: var(--gray-100); border-radius: var(--radius-sm);">üìã S√©lectionner un challenge</summary>

                        <!-- Predefined challenges -->
                        <form method="post" action="{{ path('multiplayer_select_challenge', {id: game.id}) }}" style="margin-top: 1rem;">
                            <label style="display: block; font-size: 14px; font-weight: 500; margin-bottom: 0.5rem; color: var(--gray-700);">Challenge pr√©d√©fini</label>
                            <select name="challengeId" style="width: 100%; padding: 0.75rem; border: 1px solid var(--gray-300); border-radius: var(--radius-sm); margin-bottom: 1rem;">
                                <option value="">-- Choisir un challenge --</option>
                                {% for challenge in challenges %}
                                    <option value="{{ challenge.id }}">{{ challenge.startPage }} ‚Üí {{ challenge.endPage }}</option>
                                {% endfor %}
                            </select>
                            <button type="submit" style="width: 100%; padding: 0.75rem; background: var(--primary); color: white; border: none; border-radius: var(--radius-sm); font-weight: 600; cursor: pointer;">
                                S√©lectionner
                            </button>
                        </form>

                        <div style="text-align: center; margin: 1rem 0; color: var(--gray-500); font-size: 14px;">ou</div>

                        <!-- Custom challenge -->
                        <form method="post" action="{{ path('multiplayer_select_challenge', {id: game.id}) }}" style="margin-bottom: 1rem;">
                            <label style="display: block; font-size: 14px; font-weight: 500; margin-bottom: 0.5rem; color: var(--gray-700);">Challenge personnalis√©</label>

                            <div style="margin-bottom: 1rem;" data-controller="wiki-autocomplete" data-wiki-autocomplete-url-value="{{ path('api_search_wikipedia') }}">
                                <label style="display: block; font-size: 13px; margin-bottom: 0.25rem; color: var(--gray-600);">Page de d√©part</label>
                                <div style="position: relative;">
                                    <input
                                        type="text"
                                        name="customStartPage"
                                        placeholder="Ex: France"
                                        style="width: 100%; padding: 0.75rem; border: 1px solid var(--gray-300); border-radius: var(--radius-sm);"
                                        data-wiki-autocomplete-target="input"
                                        data-action="input->wiki-autocomplete#search keydown->wiki-autocomplete#navigate blur->wiki-autocomplete#blur"
                                        autocomplete="off"
                                    >
                                    <div
                                        data-wiki-autocomplete-target="results"
                                        style="display: none; position: absolute; top: 100%; left: 0; right: 0; background: white; border: 1px solid var(--gray-300); border-top: none; border-radius: 0 0 var(--radius-sm) var(--radius-sm); max-height: 200px; overflow-y: auto; z-index: 1000; box-shadow: 0 4px 6px rgba(0,0,0,0.1);"
                                    ></div>
                                </div>
                            </div>

                            <div style="margin-bottom: 1rem;" data-controller="wiki-autocomplete" data-wiki-autocomplete-url-value="{{ path('api_search_wikipedia') }}">
                                <label style="display: block; font-size: 13px; margin-bottom: 0.25rem; color: var(--gray-600);">Page d'arriv√©e</label>
                                <div style="position: relative;">
                                    <input
                                        type="text"
                                        name="customEndPage"
                                        placeholder="Ex: Philosophie"
                                        style="width: 100%; padding: 0.75rem; border: 1px solid var(--gray-300); border-radius: var(--radius-sm);"
                                        data-wiki-autocomplete-target="input"
                                        data-action="input->wiki-autocomplete#search keydown->wiki-autocomplete#navigate blur->wiki-autocomplete#blur"
                                        autocomplete="off"
                                    >
                                    <div
                                        data-wiki-autocomplete-target="results"
                                        style="display: none; position: absolute; top: 100%; left: 0; right: 0; background: white; border: 1px solid var(--gray-300); border-top: none; border-radius: 0 0 var(--radius-sm) var(--radius-sm); max-height: 200px; overflow-y: auto; z-index: 1000; box-shadow: 0 4px 6px rgba(0,0,0,0.1);"
                                    ></div>
                                </div>
                            </div>

                            <button type="submit" style="width: 100%; padding: 0.75rem; background: var(--accent); color: white; border: none; border-radius: var(--radius-sm); font-weight: 600; cursor: pointer;">
                                Cr√©er le challenge
                            </button>
                        </form>
                    </details>
                {% endif %}

                {% if game.hasCustomChallenge() or game.challenge %}
                    <div style="padding: 1rem; background: var(--gray-50); border-radius: var(--radius-sm); display: flex; gap: 10px; align-items: center;">
                        <div style="font-weight: 600; color: var(--primary);">{{ game.startPage }}</div>
                        <div style="font-size: 12px; color: var(--gray-600); margin: 0.5rem 0;">‚ûú</div>
                        <div style="font-weight: 600; color: var(--success);">{{ game.endPage }}</div>
                    </div>
                    {% if game.hasCustomChallenge() %}
                        <div style="font-size: 12px; color: var(--gray-600); margin-top: 0.5rem; text-align: center;">
                            ‚≠ê Challenge personnalis√©
                        </div>
                    {% endif %}
                {% else %}
                    <div style="padding: 1rem; background: var(--gray-100); border-radius: var(--radius-sm); color: var(--gray-600); text-align: center; margin-bottom: 1rem;">
                        En attente de s√©lection du cr√©ateur...
                    </div>
                {% endif %}

            </div>

            <!-- Ready Button -->
            <div style="display: flex; gap: 1rem;">
                <button type="button"
                        data-multiplayer--room-target="readyBtn"
                        data-action="click->multiplayer--room#toggleReady"
                        style="flex: 1; padding: 1rem; background: linear-gradient(135deg, var(--success) 0%, #059669 100%); color: white; border: none; border-radius: var(--radius-md); font-weight: 600; cursor: pointer; font-size: 16px; transition: all 0.3s ease;">
                    ‚úì Je suis pr√™t
                </button>

                <form method="post" action="{{ path('multiplayer_leave', {id: game.id}) }}" style="flex: 1;">
                    <button type="submit" style="width: 100%; padding: 1rem; background: var(--gray-200); color: var(--gray-900); border: none; border-radius: var(--radius-md); font-weight: 600; cursor: pointer; font-size: 16px;">
                        ‚úï Quitter
                    </button>
                </form>
            </div>

            <!-- Start Button (Creator only) -->
            {% if player == game.creator %}
                <button type="button"
                        data-multiplayer--room-target="startBtn"
                        data-action="click->multiplayer--room#startCountdown"
                        disabled
                        style="width: 100%; padding: 1.5rem; background: linear-gradient(135deg, var(--accent) 0%, #f97316 100%); color: white; border: none; border-radius: var(--radius-md); font-weight: 600; cursor: pointer; font-size: 18px; opacity: 0.5; cursor: not-allowed;"
                        title="Tous les joueurs doivent √™tre pr√™ts">
                    üöÄ D√©marrer la partie
                </button>
            {% endif %}

            <!-- Status Info -->
            <div style="padding: 1rem; background: var(--gray-50); border-radius: var(--radius-sm); font-size: 13px; color: var(--gray-600);">
                <div style="margin-bottom: 0.5rem;"><strong>√âtat de la room:</strong> {{ game.state.label() }}</div>
                {% if player == game.creator and game.challenge %}
                    <div style="color: var(--primary); font-weight: 600;">
                        Tous les joueurs doivent √™tre pr√™ts pour d√©marrer
                    </div>
                {% endif %}
            </div>
        </section>
    </main>
</div>

<!-- Countdown Overlay -->
<div data-controller="multiplayer--countdown"
     data-multiplayer--countdown-target="overlay"
     style="display: none; position: fixed; top: 0; left: 0; right: 0; bottom: 0; background: rgba(0,0,0,0.9); z-index: 9999; flex-direction: column; justify-content: center; align-items: center;">
    <div style="text-align: center; color: white;">
        <div style="font-size: 120px; font-weight: 700; margin: 0;" data-multiplayer--countdown-target="text">5</div>
        <div style="font-size: 24px; margin-top: 1rem;">Pr√©parez-vous !</div>
    </div>
</div>

<!-- Kicked Modal -->
<div data-multiplayer--room-target="kickedModal"
     style="display: none; position: fixed; top: 0; left: 0; right: 0; bottom: 0; background: rgba(0,0,0,0.7); z-index: 10000; flex-direction: column; justify-content: center; align-items: center;">
    <div style="background: white; padding: 2rem; border-radius: 12px; text-align: center; max-width: 400px; box-shadow: 0 10px 40px rgba(0,0,0,0.3);">
        <div style="font-size: 48px; margin-bottom: 1rem;">‚ö†Ô∏è</div>
        <h2 style="margin: 0 0 1rem 0; font-size: 24px; color: #1a1a1a;">Vous avez √©t√© retir√©</h2>
        <p style="margin: 0 0 1.5rem 0; color: #666; font-size: 16px;">Le cr√©ateur vous a retir√© de la room.</p>
        <button type="button"
                data-action="click->multiplayer--room#returnToLobby"
                style="width: 100%; padding: 0.75rem; background: linear-gradient(135deg, var(--primary) 0%, #0891b2 100%); color: white; border: none; border-radius: 8px; font-weight: 600; cursor: pointer; font-size: 16px;">
            Retour au lobby
        </button>
    </div>
</div>

{% endblock %}

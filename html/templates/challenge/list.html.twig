{% extends "base.html.twig" %}

{% block title %}Défis Solo - Wiki Game{% endblock %}

{% block page_stylesheets %}
    {{ encore_entry_link_tags('landing') }}
{% endblock %}

{% block body %}
<div class="landing-container">
    <header class="header">
        <a href="{{ path('app_home') }}" class="back-link">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <line x1="19" y1="12" x2="5" y2="12"/>
                <polyline points="12 19 5 12 12 5"/>
            </svg>
            Retour
        </a>
        <h1 class="main-title">Mode Solo</h1>
        <p class="subtitle">Choisissez un défi et trouvez le chemin le plus court</p>
    </header>

    <main class="game-modes challenges-page">
        <h2 class="section-title">Défis disponibles</h2>

        {% if challengesData is empty %}
            <div class="empty-state">
                <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <circle cx="12" cy="12" r="10"/>
                    <line x1="12" y1="8" x2="12" y2="12"/>
                    <line x1="12" y1="16" x2="12.01" y2="16"/>
                </svg>
                <h3>Aucun défi disponible</h3>
                <p>Revenez plus tard pour découvrir de nouveaux défis !</p>
            </div>
        {% else %}
            <div class="challenges-grid">
                {% for challengeData in challengesData %}
                    {% set challenge = challengeData.challenge %}
                    <a href="{{ path('game_start', {id: challenge.id}) }}" class="challenge-card" data-turbo-prefetch="false">
                        <div class="challenge-info">
                            <div class="challenge-header">
                                <h3 class="challenge-title">
                                    <span class="route-page-compact">{{ challenge.startPage }}</span>
                                    <span class="route-arrow-compact">→</span>
                                    <span class="route-page-compact">{{ challenge.endPage }}</span>
                                </h3>
                                <span class="difficulty-badge difficulty-{{ challenge.difficulty }}">
                                    {{ challenge.difficulty|capitalize }}
                                </span>
                            </div>

{#                            <div class="challenge-route-compact">#}
{#                                <span class="route-page-compact">{{ challenge.startPage }}</span>#}
{#                                <span class="route-arrow-compact">→</span>#}
{#                                <span class="route-page-compact">{{ challenge.endPage }}</span>#}
{#                            </div>#}
                        </div>

                        {% if challengeData.session %}
                            {% set session =  challengeData.session %}
                            {% set stats = session.path|length %}
                            {% set duration = session.durationSeconds %}
                            {% set minutes = (duration / 60)|round(0, 'floor') %}
                            {% set seconds = duration % 60 %}
                            <div class="challenge-result">
                                <div class="result-stats">
                                    <div class="result-badge completed">Complété</div>

                                    <span class="stat-item">
                                        <span class="stat-label">Temps</span>
                                        <span class="stat-value">{{ '%02d:%02d'|format(minutes, seconds) }}</span>
                                    </span>
                                    <span class="stat-item">
                                        <span class="stat-label">Pages</span>
                                        <span class="stat-value">{{ stats }}</span>
                                    </span>
                                </div>
                            </div>
                        {% else %}
                            <div class="challenge-result">
                                <div class="result-badge pending">À jouer</div>
                            </div>
                        {% endif %}
                    </a>
                {% endfor %}
            </div>
        {% endif %}
    </main>
</div>
{% endblock %}
